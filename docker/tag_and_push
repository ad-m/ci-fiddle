#!/bin/bash -e
#
# Push a Docker image to Docker Hub.

################################################################################
# Configuration
################################################################################
# Fail on first error
set -e

################################################################################
# Constants
################################################################################


################################################################################
# Global variables
################################################################################


################################################################################
# Functions
################################################################################
########################################
# Push a Docker image to Docker Hub.
#
# Globals:
#   None
# Arguments:
#   image_name Name of the image.
#   image_tag Tag of the image.
# Returns:
#   None
########################################
docker::tag_and_push() {
  local image_name="${1}"
  local image_tag="${2}"
  echo "docker push \"${image_name}:${image_tag}\""
  # docker push "${image_name}:${image_tag}"
}

main() {
  docker::push "${@}"
}

main "${@}"
